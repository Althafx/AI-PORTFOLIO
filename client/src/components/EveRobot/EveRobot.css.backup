.eve-container {
    position: fixed;
    z-index: 1;
    user-select: none;
}

.eve-robot {
    position: relative;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.3));
    pointer-events: none;
}

.eve-body {
    position: relative;
    width: 160px;
    height: 240px;
    pointer-events: none;
}

/* Main egg-shaped body - pointed/tapered like upside-down egg top (3/4 of egg) */
.eve-torso {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 140px;
    height: 150px;
    background: linear-gradient(145deg, #ffffff 0%, #e8e8e8 40%, #d0d0d0 100%);
    /* More pointed/tapered shape - like upside down egg */
    border-radius: 10% 10% 50% 50% / 35% 35% 65% 65%;
    box-shadow:
        inset -15px -15px 35px rgba(0, 0, 0, 0.12),
        inset 15px 15px 35px rgba(255, 255, 255, 0.6),
        0 15px 35px rgba(0, 0, 0, 0.25);
    animation: float-body 4s ease-in-out infinite;
}

@keyframes float-body {

    0%,
    100% {
        transform: translateX(-50%) translateY(0);
    }

    50% {
        transform: translateX(-50%) translateY(-8px);
    }
}

/* Glossy highlight on body */
.eve-torso::before {
    content: '';
    position: absolute;
    top: 15%;
    left: 20%;
    width: 40%;
    height: 50%;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.6) 40%, transparent 100%);
    border-radius: 50%;
    filter: blur(15px);
}

/* Head - floating separate piece (1/4 of egg) - WHITE outer shell */
.eve-head {
    position: relative;
    top: -15px;
    /* Gap between head and body */
    left: 50%;
    transform: translateX(-50%);
    width: 135px;
    height: 100px;
    background: linear-gradient(145deg, #ffffff 0%, #f0f0f0 50%, #e0e0e0 100%);
    border-radius: 50% 50% 35% 35% / 70% 70% 40% 40%;
    box-shadow:
        inset -10px -10px 25px rgba(0, 0, 0, 0.1),
        inset 10px 10px 25px rgba(255, 255, 255, 0.6),
        0 10px 25px rgba(0, 0, 0, 0.3);
    overflow: visible;
    animation: float-head 4s ease-in-out infinite 0.2s;
}

@keyframes float-head {

    0%,
    100% {
        transform: translateX(-50%) translateY(0);
    }

    50% {
        transform: translateX(-50%) translateY(-10px);
    }
}

/* Glossy white head highlight */
.eve-head::before {
    content: '';
    position: absolute;
    top: 12%;
    left: 22%;
    width: 35%;
    height: 45%;
    background: linear-gradient(135deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.7) 50%, transparent 100%);
    border-radius: 50%;
    filter: blur(10px);
}

/* BLACK screen inside the white head with grey highlight */
.eve-head::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 110px;
    height: 60px;
    background: linear-gradient(180deg, #16213e 0%, #0f1624 100%);
    border-radius: 50% 50% 35% 35% / 70% 70% 40% 40%;
    box-shadow:
        inset 0 -5px 20px rgba(0, 0, 0, 0.6),
        inset 15px -10px 30px rgba(255, 255, 255, 0.15),
        0 3px 10px rgba(0, 0, 0, 0.4);
}

/* Eyes container - positioned on the black screen */
.eve-eyes {
    position: absolute;
    top: 52%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    gap: 13px;
    z-index: 10;
}

/* Individual eye - oval shape that morphs to rectangle */
.eve-eye {
    width: 30px;
    height: 20px;
    position: relative;
}

/* Eye highlight */
.eve-eye::before {
    content: '';
    position: absolute;
    top: 22%;
    left: 25%;
    width: 35%;
    height: 35%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.7), transparent);
    border-radius: 50%;
    filter: blur(2px);
}

/* Eye pupil/iris - brighter center with blue glow */
.eye-pupil {
    width: 35px;
    height: 25px;
    background: radial-gradient(circle, #ffffff 0%, #b3e5fc 30%, #2c86bb 100%);
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transition: transform 0.1s ease-out;
    animation: eye-morph 10s ease-in-out infinite;
    box-shadow:
        0 0 20px rgba(44, 134, 187, 0.8),
        0 0 35px rgba(93, 222, 244, 0.6),
        0 0 50px rgba(33, 150, 243, 0.4),
        inset 0 0 10px rgba(255, 255, 255, 0.5);
}

/* Simple eye morph animation - oval to rectangle with 10s delay */
@keyframes eye-morph {
    15% {
        border-radius: 90%;
        height: 25px;
    }

    20% {
        border-radius: 10%;
        height: 10px;
    }

    25% {
        border-radius: 90%;
        height: 25px;
    }

    40% {
        border-radius: 90%;
        height: 25px;
    }

    45% {
        border-radius: 10%;
        height: 10px;
    }

    50% {
        border-radius: 90%;
        height: 25px;
    }

    70% {
        border-radius: 90%;
        height: 25px;
    }

    75% {
        border-radius: 10%;
        height: 10px;
    }

    80% {
        border-radius: 90%;
        height: 25px;
    }

    100% {
        border-radius: 90%;
        height: 25px;
    }
}

/* Sleek arms - oval shaped slices hanging down */
.eve-arm {
    position: absolute;
    width: 18px;
    height: 130px;
    background: linear-gradient(145deg, #f5f5f5 0%, #e0e0e0 50%, #d0d0d0 100%);
    border-radius: 50%;
    top: 43%;
    /* Positioned near shoulders/top of torso */
    box-shadow:
        inset -2px -2px 10px rgba(0, 0, 0, 0.18),
        inset 2px 2px 10px rgba(255, 255, 255, 0.6),
        0 6px 18px rgba(0, 0, 0, 0.25);
}

/* Arm highlight */
.eve-arm::before {
    content: '';
    position: absolute;
    top: 15%;
    left: 30%;
    width: 30%;
    height: 50%;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.5), transparent);
    border-radius: 50%;
    filter: blur(2px);
}

.left-arm {
    left: -10px;
    transform: rotate(0deg);
    animation: float-left-arm 3.5s ease-in-out infinite;
}

.right-arm {
    right: -10px;
    transform: rotate(0deg);
    animation: float-right-arm 3.5s ease-in-out infinite 0.3s;
}

@keyframes float-left-arm {

    0%,
    100% {
        transform: rotate(0deg) translateY(0);
    }

    50% {
        transform: rotate(10deg) translateY(-6px);
    }
}

@keyframes float-right-arm {

    0%,
    100% {
        transform: rotate(0deg) translateY(0);
    }

    50% {
        transform: rotate(-10deg) translateY(-6px);
    }
}

/* Thought Bubble */
.thought-bubble {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    background: white;
    padding: 12px 20px;
    border-radius: 20px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    transition: all 0.3s ease;
    animation: float-bubble 3s ease-in-out infinite;
    z-index: 10;
}

.thought-bubble:hover {
    transform: translateX(-50%) scale(1.05);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
}

.bubble-content {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #2196f3;
    font-weight: 600;
    font-size: 14px;
}

.bubble-content svg {
    stroke: #2196f3;
}

.bubble-tail {
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 25px;
    height: 25px;
    background: white;
    border-radius: 50%;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
}

.bubble-tail-small {
    position: absolute;
    bottom: -35px;
    left: 55%;
    transform: translateX(-50%);
    width: 15px;
    height: 15px;
    background: white;
    border-radius: 50%;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
}

@keyframes float-bubble {

    0%,
    100% {
        transform: translateX(-50%) translateY(0);
    }

    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transition: transform 0.1s ease-out;
    animation: eye-morph 10s ease-in-out infinite;
    box-shadow: 0 0 20px rgba(44, 134, 187, 0.8),
    0 0 35px rgba(93, 222, 244, 0.6),
    0 0 50px rgba(33, 150, 243, 0.4),
    inset 0 0 10px rgba(255, 255, 255, 0.5);
}
